{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "postHeading": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "banner": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "via": "posts",
      "collection": "category",
      "dominant": true
    },
    "languages": {
      "via": "posts",
      "collection": "language",
      "dominant": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "sections.code",
        "sections.media",
        "sections.text",
        "sections.two-col-media",
        "sections.two-col-text"
      ]
    }
  }
}
